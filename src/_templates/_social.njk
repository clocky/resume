  {% if client %}
  {% set cover = env.base.img + "hero/" + client | slug + "/" + title | slug  + "_1200w.jpg" %}
  {% endif %}

  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ abstract or title }}">
  <meta property="og:type" content="article">
  <meta property="og:image" content="{{ cover }}"/>
  <meta property="og:image:width" content="1200" />
  <meta property="og:image:height" content="675" />
  
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="@clocky">
  <meta name="twitter:description" content="{{ abstract or title }}">
  <meta name="twitter:image" content="{{ cover }}">
  <meta name="twitter:creator" content="@clocky">
