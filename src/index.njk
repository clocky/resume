---
title: Portfolio of Mark McLaughlin
eleventyExcludeFromCollections: true
---
{% extends "base.njk" %}

{% macro picture(title, client, maximum='1200') %}
    {% set prefix = "/img/hero/" + client | slug + "/" + title | slug %}
    <picture class="img-fluid">
        {% set breakpoint = [1200, 992, 768, 576] %}
        {%- for width in [1600, 1200, 800, 400] -%}
            {% if width < maximum %}
            <source 
                srcset="{{prefix}}_{{width}}w.jpg"
                media="(min-width: {{breakpoint[loop.index0]}}px)"
            />
            {% endif %}
        {% endfor -%}
        <img class="img-fluid" src="{{prefix}}_{{maximum}}w.jpg" alt="Preview of {{ title }}, designed by Mark McLaughlin for {{ client }}.">
    </picture>
{% endmacro %}

{% macro srcset(title, client) %}
    {% set prefix = "/img/hero/" + client | slug + "/" + title | slug %}
    {% set breakpoint = [1200, 992, 768, 576] %}
    {% set srcset %}
        {%- for width in [1600, 1200, 800, 400] -%}
            {{prefix}}_{{width}}w.jpg {{breakpoint[loop.index0]}}px,
        {%- endfor -%}
    {% endset %}
    <img 
        class="img-fluid"
        srcset="{{ srcset }}" 
        sizes="(min-width: 48em) 48em, 100vw" 
        src="{{prefix}}_1200w.jpg"
    />
{% endmacro %}

{% block title %}
    {% set mobile = "d-xs-block d-sm-block d-md-none d-lg-none" %}
    {% set tablet = "d-none d-md-block d-lg-block" %}
    <div class="container">
        <div class="row mt-4">
            {% for page in collections.all | reverse  %}
            <!-- Hero  -->
                <div class="
                    {%- if loop.index == 1 %} col-lg-12 col-md-12 mb-4 {%- endif %}
                    {%- if loop.index == 2 or loop.index == 3 %} col-lg-6 col-md-6 mb-4 {%- endif %}
                    {%- if loop.index >= 4 %} col-lg-4 col-md-6 mb-3 {%- endif %}
                    ">
                    <a href="{{page.url}}index.html">
                        {{ picture(page.data.title, page.data.client) }}
                    </a>
                    {% if loop.index == 1 %}
                        <h2 class="mt-4 {{tablet}}">
                            <a href="{{page.url}}" class="text-info">{{page.data.title}}</a>
                        </h2>
                        <p class="{% if loop.index == 1%}lead{% endif %} text-secondary {{tablet}}">{{ page.data.abstract }}</p>
                        <h3 class="mt-4 {{mobile}}">
                            <a href="{{page.url}}" class="text-info">{{page.data.title}}</a>
                        </h3>
                        <p class="text-secondary {{mobile}}">{{ page.data.abstract }}</p>
                    {% else %}
                        <h3 class="mt-4"><a href="{{page.url}}" class="text-info">{{page.data.title}}</a></h3>
                        <p class="text-secondary">{{ page.data.abstract }}</p>
                    {% endif %}
                </div>
            <!-- // hero -->
    {% endfor %}
            </div>
    </div> <!-- // row -->
</div> <!-- container -->
{% endblock %}