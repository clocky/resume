---
title: All projects
eleventyExcludeFromCollections: true
---
{% extends "base.njk" %}

{% macro img(title, client) %}
    {% set prefix = "/img/hero/" + client | slug + "/" + title | slug %}
    <img 
        class="img-fluid shadow-sm"
        src="{{ prefix }}_400w.jpg"
        srcset="
            {%- for width in [800, 400] -%}
            {{prefix}}_{{width}}w.jpg {{width}}w{% if not loop.last %},{% endif %}
            {%- endfor -%}"
        alt="Preview of {{ title }}, designed for {{ client }}."
    />
{% endmacro %}

{% block title %}
    <div class="container mt-5 pt-3">
    {% set current_year = 2020 %}
    {% for page in collections.projects | reverse  %}
    <div class="row pb-4 mt-4">
        {% set year = page.data.date | date("YYYY") %}
        {% if year != current_year %}
            <div class="offset-lg-1 col-lg-2 col-md-12 text-center mb-2">
                <h2 class="heading-3 text-secondary">{{ year }}</h3>
                <hr />
            </div>
        {% else %}
            <div class="offset-lg-1 col-lg-2 col-md-12">
            </div>
        {% endif %}
        {% set current_year = year %}
        <div class="col-lg-3 col-md-4 pb-2">
            <a href="{{ page.url }}">
                {{ img(page.data.title, page.data.client) }}
            </a>
        </div>
        <div class="col-lg-5 col-md-8">
            <p class="text-small text-uppercase text-muted mb-0">{{ page.data.client}}</p>
            <h3 class="text-info">
                <a href="{{ page.url }}" class="text-info">{{ page.data.title }}</a>
            </h3>
            <p>{{ page.data.abstract }}</p>
        </div>
    </div>
    {% endfor %}
    </div>
{% endblock %}