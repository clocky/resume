<footer class="container-fluid" data-theme="dark">
    <div class="container">
        <nav class="grid">
            <p>
                <small>
                    {{ resume.basics.summary }}
                </small>
            </p>
            <aside class="grid">
                {% for group in resume.basics.profiles | batch(2) %}
                    <ul>
                        {% for profile in group %}
                            <li>
                                <small>
                                    <a href="{{ profile.url }}">
                                        <i class="fa-brands fa-{{profile.network | slugify }}" 
                title="View {{profile.username}} on {{profile.network}}"></i>
                                        <span>{{ profile.network }}</span>
                                    </a>
                                </small>
                            </li>
                        {% endfor %}
                    </ul>
                    {%endfor%}
                </aside>
            </nav>
        </div>
    </footer>