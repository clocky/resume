---
title: All projects
eleventyExcludeFromCollections: true
---
{% extends "base.njk" %}

{% block title %}
<div class="row">
    {% for page in collections.all | reverse  %}
        {% if page.data.tags  %}
            <div class="col-lg-3">
                <div class="card mb-4">
                    <a href="{{ page.url }}">
                        {% if page.data.thumbnail %}
                            {% set thumbnail = page.data.thumbnail %}
                        {% else %}
                            {% set thumbnail = page.data.media[0] %}
                        {% endif %}
                        <img class="card-img-top" src="/assets/{{thumbnail}}" />
                    </a>
                    <div class="card-body">
                        <h4><a href="{{ page.url }}" class="text-info">{{ page.data.title}}</a></h4>
                        <h5 class="text-secondary">
                            {{ page.data.client }}
                            {% if page.data.partner %}
                            <code>Ã—</code> {{ page.data.partner}}
                            {% endif %}
                        </h5>
                        <p>{{ page.data.abstract }}</p>
                    </div>
                    <div class="card-footer">
                        <small>{{ page.data.date | date("MMMM Y")}}</small>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
</div>
{% endblock %}