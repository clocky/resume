{% extends "base.njk" %}

{% block title  %}
<div class="row">
    <div class="col-12 border-bottom mb-4 pb-3">
        <h1 class="text-info">{{ title }}</h1>
        <h4 class="text-dark">{{ page.date | date("Y") }} â€¢ {{ client }}</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
    </div>
    <div class="col-lg-8">
        <h2>{{ headline }}</h2>
    </div>
</div>
<div class="row">
    <div class="col-lg-4">
        <p class="lead text-secondary">{{ abstract }}</p>
    </div>
    <div class="col-lg-8">
        {% for paragraph in text %}
            {% if loop.first %}
            <p class="lead">{{ paragraph }}</p>
            {% else %}
            <p>{{ paragraph }}</p>
            {% endif %}
        {% endfor %}
    </div>
</div>
<div class="row mt-4">
  <div class="col-lg-4 order-lg-1 order-2">
    {% if collaborators %}
      <h3 class="text-secondary font-weight-bold">Collaborators</h3>
      <ul class="list-unstyled">
        {% for person in collaborators %}
          <li class="text-secondary">{{ person }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  </div>
  <div class="col-lg-8 order-lg-2 order-1">
    {% if media.length <= 2 %}
      {% for image in media %}
        <img class="d-block w-100" src="/assets/{{image}}" />
      {% endfor %}
    {% else %}
      <div class="carousel.slide.mt-2.mb-4" id="{{title | slug }}" data-ride="carousel">
        <ol class="carousel-indicators">
          {% for n in media %}
            <li data-target="#{{title | slug}}" data-slide-to="{{ loop.index0 }}" {% if loop.first %}class="active"{% endif %} ></li>
          {% endfor %}
        </ol>
        <div class="carousel-inner">
          {% for image in media %}
            <div class="carousel-item {% if loop.first %}active{% endif %}">
              <img class="d-block w-100" src="/assets/{{ image }}">
            </div>
          {% endfor %}
          <a class="carousel-control-prev" href="#{{title | slug}}" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#{{title |slug}}" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    {% endif %}
  </div> 
</div>

{% endblock %}
