
<footer class="bg-light mt-5 pt-4">
    <div class="container">
        <div class="row pt-3">
        {% for category, pages in collections %}
            {% if category != "all" %}
            <div class="col-lg-3">
                <h5 class="text-dark font-weight-bold">{{ category | capitalize }}</h5>
                <ul class="list-unstyled">
                    {%- for article in pages -%}
                        <li><a href="{{ article.url }}" class="text-info">{{ article.data.title }}</a></li>
                    {%- endfor -%}
                </ul>
            </div>
            {% endif %}
        {% endfor %}
        </div>
        <div class="row">
            <div class="col-12 text-left">
