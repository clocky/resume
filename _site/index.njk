---
title: Portfolio of Mark McLaughlin
eleventyExcludeFromCollections: true
---
{% extends "base.njk" %}

{% macro img(title, client) %}
    {% set prefix = "/assets/hero/" + client | slug + "/" + title | slug %}
    <img 
        class="img-fluid w-100"
        src="{{ prefix }}_800.jpg"
        srcset="
            {%- for width in [1600, 1200, 800, 400] -%}
            {{prefix}}_{{width}}w.jpg {{width}}w{% if not loop.last %},{% endif %}
            {%- endfor -%}"
        alt="Preview of {{ title }}, designed for {{ client }}."
    />
{% endmacro %}

{% block title %}
    {% for page in collections.all | reverse  %}

        <!-- HERO if first in collection -->

        {% if loop.index == 1 %}
            <div class="row mt-4">
                <div class="col-lg-12">
                    <a href="{{page.url}}">
                        {{ img(page.data.title, page.data.client) }}
                    </a>
                    <h2 class="mt-4"><a href="{{page.url}}" class="text-info">{{page.data.title}}</a></h2>
                    <p class="lead">{{ page.data.abstract }}</p>
                </div>
            </div>
        {% endif %}

        <!-- open and close second level -->

        {% if loop.index == 2%}
            <div class="row mt-4 mb-4">
        {% endif %}
        {% if loop.index == 2 or loop.index == 3 %}
            <div class="col-lg-6 col-md-6">
                <a href="{{page.url}}">
                    {{ img(page.data.title, page.data.client) }}
                </a>
                <h3 class="mt-4"><a href="{{page.url}}" class="text-info">{{page.data.title}}</a></h3>
                <p class="text-secondary lead">{{ page.data.abstract }}</p>
            </div>
        {% endif %}
        {% if loop.index == 3 %}
            </div>
        {% endif %}

        <!-- open and close second level -->
        {% if loop.index == 4%}
        <div class="row">
        {% endif %}
        {% if loop.index >= 4 %}
            <div class="col-lg-4">
                <a href="{{page.url}}">
                    {{ img(page.data.title, page.data.client) }}
                </a>
                <h4 class="mt-4"><a href="{{page.url}}" class="text-info">{{page.data.title}}</a></h4>
                <p class="text-secondary">{{ page.data.abstract }}</p>
            </div>
        {% endif %}
        {% if loop.index == 7 %}
        </div> <!-- // row -->
        {% endif %} 
    {% endfor %}
{% endblock %}