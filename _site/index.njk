---
title: Portfolio of Mark McLaughlin
eleventyExcludeFromCollections: true
---
{% extends "base.njk" %}

{% macro picture(title, client) %}
    {% set prefix = "/assets/hero/" + client | slug + "/" + title | slug %}
    <picture>
        {% set breakpoint = [1200, 992, 768, 576] %}
        {%- for width in [1600, 1200, 800, 400] -%}
            <source 
                srcset="{{prefix}}_{{width}}w.jpg"
                media="(min-width: {{breakpoint[loop.index0]}}px)"
            />
        {% endfor -%}
        <img class="img-fluid" src="{{prefix}}_800w.jpg" alt="Preview of {{ title }}, designed by Mark McLaughlin for {{ client }}.">
    </picture>
{% endmacro %}

{% block title %}
    {% set mobile = "d-xs-block d-sm-block d-md-none d-lg-none" %}
    {% set tablet = "d-none d-md-block d-lg-block" %}
    {% for page in collections.all | reverse  %}
        {% if loop.index == 1 %}
            <!-- Hero  -->
            <div class="row mt-4">
                <div class="col-lg-12 col-md-12">
                    <a href="{{page.url}}">
                        {{ picture(page.data.title, page.data.client) }}
                    </a>
                    <h2 class="mt-4 {{tablet}}">
                        <a href="{{page.url}}" class="text-info">{{page.data.title}}</a>
                    </h2>
                    <p class="lead text-secondary {{tablet}}">{{ page.data.abstract }}</p>
                    <h3 class="mt-4 {{mobile}}">
                        <a href="{{page.url}}" class="text-info">{{page.data.title}}</a>
                    </h3>
                    <p class="text-secondary {{mobile}}">{{ page.data.abstract }}</p>
                </div>
            </div>
            <!-- // hero -->
        {% endif %}

        {% if loop.index == 2%}
            <!-- Second row -->
            <div class="row mt-4 mb-4">
        {% endif %}
        {% if loop.index == 2 or loop.index == 3 %}
            <div class="col-lg-6 col-md-6">
                <a href="{{page.url}}">
                    {{ picture(page.data.title, page.data.client) }}
                </a>
                <h3 class="mt-4"><a href="{{page.url}}" class="text-info">{{page.data.title}}</a></h3>
                <p class="text-secondary">{{ page.data.abstract }}</p>
            </div>
        {% endif %}
        {% if loop.index == 3 %}
            </div>
            <!-- // second-row -->
        {% endif %}

        {% if loop.index0 == 3 %}
        <!-- BOTTOM ROWS -->
        <div class="row">
        {% endif %}
        {% if loop.index >= 4 %}
            <div class="col-lg-4 col-md-6">
                <a href="{{page.url}}">
                    {{ picture(page.data.title, page.data.client) }}
                </a>
                <h3 class="mt-3"><a href="{{page.url}}" class="text-info">{{page.data.title}}</a></h3>
                <p class="text-secondary">{{ page.data.abstract }}</p>
            </div>
        {% endif %}
    {% endfor %}
    </div> <!-- // row -->
{% endblock %}